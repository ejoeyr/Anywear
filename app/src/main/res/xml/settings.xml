<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="General">


        <CheckBoxPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_image_photo"
            android:key="@string/pref_fast_load"
            android:summary="@string/string_power_consumption"
            android:title="@string/string_fast_image" />

        <Preference
            android:icon="@drawable/ic_action_delete"
            android:key="@string/pref_clear_cache"
            android:summary="@string/string_deletes_cache"
            android:title="@string/string_clear_cache" />


        <Preference
            android:icon="@drawable/ic_av_replay"
            android:key="@string/pref_defaults"
            android:summary="@string/string_restore_defaults"
            android:title="@string/string_restore_defaults_title" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_vibration_symbol"
            android:key="@string/pref_vibration"
            android:summary="@string/string_vibration_summary"
            android:title="@string/string_vibration" />



    </PreferenceCategory>
