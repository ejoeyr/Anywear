    <PreferenceCategory android:title="@string/string_ootd_category">

        <CheckBoxPreference
            android:key="@string/pref_ootd_noti"
            android:icon="@drawable/ic_device_access_alarm"
            android:summary="@string/string_enable_disable_ootd"
            android:title="@string/string_ootd_noti" />

        <ListPreference
            android:icon="@drawable/ic_action_toc"
            android:entries="@array/pref_time_entries"
            android:entryValues="@array/pref_time_values"
            android:key="@string/pref_set_time"
            android:defaultValue="7"
            android:summary="@string/string_select_time"
            android:title="@string/string_notification_time" />


    </PreferenceCategory>
    <PreferenceCategory android:title="@string/string_rate_share_category">

        <Preference
            android:icon="@drawable/ic_toggle_star"
            android:key="@string/pref_rate"
            android:summary="Rate 5 stars!"
            android:title="@string/string_rate" />

        <Preference
            android:icon="@drawable/ic_social_share"
            android:key="@string/pref_share"
            android:summary="Share with everyone!"
            android:title="@string/string_share" />


    </PreferenceCategory>
    <PreferenceCategory android:title="@string/string_extras">

        <Preference
            android:icon="@drawable/ic_action_bug_report"
            android:key="@string/pref_bug"
            android:title="@string/string_report_a_bug" />

        <Preference
            android:icon="@drawable/ic_social_people"
            android:key="@string/pref_donate"
            android:summary="@string/string_for_continued_dev"
            android:title="@string/string_donate" />


        <Preference
            android:icon="@drawable/ic_action_help"
            android:key="@string/pref_about"
            android:summary="@string/string_about_app_and_dev"
            android:title="@string/string_about" />


    </PreferenceCategory>


</PreferenceScreen>